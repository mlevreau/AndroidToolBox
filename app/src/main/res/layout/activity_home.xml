<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Bonjour"
        android:textColor="#8F8F8F"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/home_cycle"
        android:layout_width="108dp"
        android:layout_height="107dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.204"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_title"
        app:srcCompat="@drawable/message"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/home_permission"
        android:layout_width="108dp"
        android:layout_height="107dp"
        android:layout_marginTop="57dp"
        android:background="#DD4B39"
        android:tint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/home_cycle"
        app:layout_constraintStart_toStartOf="@+id/home_cycle"
        app:layout_constraintTop_toBottomOf="@id/home_cycle"
        app:srcCompat="@android:drawable/ic_menu_call" />

    <ImageView
        android:id="@+id/home_save"
        android:layout_width="108dp"
        android:layout_height="107dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:background="#DD4B39"
        android:tint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintStart_toEndOf="@+id/home_cycle"
        app:layout_constraintTop_toBottomOf="@+id/home_title"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <ImageView
        android:id="@+id/home_web"
        android:layout_width="108dp"
        android:layout_height="107dp"
        android:layout_marginTop="55dp"
        android:background="#DD4B39"
        android:tint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/home_save"
        app:layout_constraintStart_toStartOf="@+id/home_save"
        app:layout_constraintTop_toBottomOf="@+id/home_save"
        app:srcCompat="@android:drawable/ic_menu_upload" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cycle de Vie"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/home_cycle"
        app:layout_constraintStart_toStartOf="@+id/home_cycle"
        app:layout_constraintTop_toBottomOf="@+id/home_cycle" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sauvegarde"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/home_save"
        app:layout_constraintStart_toStartOf="@+id/home_save"
        app:layout_constraintTop_toBottomOf="@+id/home_save" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permission"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/home_permission"
        app:layout_constraintStart_toStartOf="@+id/home_permission"
        app:layout_constraintTop_toBottomOf="@+id/home_permission" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WebServices"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/home_web"
        app:layout_constraintStart_toStartOf="@+id/home_web"
        app:layout_constraintTop_toBottomOf="@+id/home_web" />

    <ImageView
        android:id="@+id/home_deco"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_lock_power_off" />

    <ImageView
        android:id="@+id/home_ble"
        android:layout_width="108dp"
        android:layout_height="107dp"
        android:layout_marginTop="55dp"
        android:background="#DD4B39"
        app:layout_constraintEnd_toEndOf="@+id/home_permission"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/home_permission"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        app:srcCompat="@android:drawable/stat_sys_data_bluetooth" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/home_ble"
        app:layout_constraintStart_toStartOf="@+id/home_ble"
        app:layout_constraintTop_toBottomOf="@+id/home_ble" />

</androidx.constraintlayout.widget.ConstraintLayout>